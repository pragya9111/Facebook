<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/style.css">
</head>

<body>

    <div class="container">
        <div class="nav">
            <div class="left">
                <img src="../images/logo1.png" alt="">
                <input type="search" placeholder="Search">
            </div>
            <div class="mid">
                <i class="ri-home-7-fill" style="color:#1B74E4 ;"></i>
                <i class="ri-user-follow-line"></i>
                <i class="ri-vidicon-line"></i>
                <i class="ri-store-line"></i>
                <i class="ri-group-2-line"></i>
            </div>
            <div class="rigth">
                <div class="circ"><i class="ri-menu-5-line"></i></div>
                <div class="circ"><i class="ri-messenger-fill"></i></div>
                <div class="circ"><i class="ri-notification-3-fill"></i></div>
                <div class="circ"><i class="ri-arrow-down-s-fill"></i></div>
            </div>
        </div>
        <a href="/profile"><button style="background-color: #EAB026;padding: 1vmin;border: none;">Back to profile</button></a>
        <div class="center">
            <div class="topbox">
                <input type="text" placeholder="What's on your mind?">
                <div class="icn">
                    <i class="ri-live-fill" style="display: flex;align-items: center;color: #E73F5A;font-size: 2.3vmin;">Live Video</i>
                    <i class="ri-image-fill" style="display: flex;align-items: center;color: #41B35D;font-size: 2.3vmin;">Photo/Video</i>
                    <i class="ri-emotion-line" style="display: flex;align-items: center;color:#EAB026;font-size: 2.3vmin;">Feeling/Activity</i>
                </div>
            </div>
                <div id="cards">
                    <%allpost.forEach(function(elems){%>
                        <div class="card">
                            <div class="top">
                                <div class="pic">
                                    <img src="../images/avatar.png" alt="">
                                </div>
                                <div class="creator">
                                    <h5><%=elems.username.username%></h5>
                                    <p><%=elems.createdat%></p>
                                </div>
                            </div>
                            <div class="mid1">
                                <p><%=elems.caption%></p>
                            </div>
                            <div class="mid2">
                                <img src='./images/uploads/<%=elems.image%>' alt="">
                            </div>
                            <div class="btm">
                                <a href="/like/<%=elems._id%>" style="display: flex;text-decoration: none;align-items: center;color:#60627C;"><i class="ri-thumb-up-line"></i>Like <p><%=elems.likes.length%></p> </a> 
                                <a href="#" style="display: flex;text-decoration: none;align-items: center;color:#60627C;"><i class="ri-chat-3-line"></i> Comment<p></p> </a> 
                                
                            </div>
                        </div>
                    <%})%>
                </div>


        </div>
        <div class="overlay">
            <div class="createbox">
                <div class="head"><h4>Create Post</h4><i class="ri-close-circle-line"></i></div>
                <form action="/createpost" method="post" enctype="multipart/form-data">
                    <textarea name="caption" cols="55" rows="10" placeholder="Write caption..."></textarea>
                    <input type="file" name="image"><br><br>
                    <input type="submit" value="Post" style="padding:.6vmin 1.2vmin;background-color: #EAB026;border: none;">
                </form>
            </div>
        </div>

    </div>

</body>
<script>
    document.querySelector(".topbox input").addEventListener('click',function(){
        document.querySelector('.overlay').style.display = "flex"
    })
    document.querySelector('.head i').addEventListener("click", function(){
        document.querySelector('.overlay').style.display = "none"
        
    })
</script>

</html>